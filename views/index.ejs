<%- include("partials/head") %>
  <div class="flex flex-row">
    <%- include("partials/sidebar") %>
      <div class="flex flex-col max-h-screen w-full overflow-scroll">
        <%- include("partials/header") %>
          <main class="m-3">
            <div
              class="p-4 bg-white block sm:flex items-start justify-between dark:bg-neutral-800 dark:border-neutral-700">
              <div class="w-full mb-1">
                <div class="mb-4">
                  <nav class="flex mb-5" aria-label="Breadcrumb">
                    <ol class="inline-flex items-center space-x-1 text-sm font-semibold md:space-x-2">
                      <li class="inline-flex items-center">
                        <a href="#"
                          class="inline-flex items-center text-neutral-700 hover:text-primary-600 dark:text-neutral-300 dark:hover:text-white">
                          <svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20"
                            xmlns="http://www.w3.org/2000/svg">
                            <path
                              d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z">
                            </path>
                          </svg>
                          Home
                        </a>
                      </li>
                      <li>
                        <div class="flex items-center">
                          <svg class="w-6 h-6 text-neutral-400" fill="currentColor" viewBox="0 0 20 20"
                            xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                              clip-rule="evenodd"></path>
                          </svg>
                          <span class="ml-1 text-neutral-400 md:ml-2 dark:text-neutral-500"
                            aria-current="page">Movies</span>
                        </div>
                      </li>
                    </ol>
                  </nav>
                  <h1 class="text-xl font-semibold text-neutral-900 sm:text-2xl dark:text-white">All movies</h1>
                </div>
                <div
                  class="items-center justify-between block sm:flex md:divide-x md:divide-neutral-100 dark:divide-neutral-700">
                  <div class="flex items-center mb-4 sm:mb-0">
                    <form class="sm:pr-3" action="#" method="GET">
                      <label for="products-search" class="sr-only">Search</label>
                      <div class="relative w-48 mt-1 sm:w-64 xl:w-96">
                        <input type="text" name="email" id="products-search"
                          class="bg-neutral-50 border border-neutral-300 text-neutral-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-neutral-700 dark:border-neutral-600 dark:placeholder-neutral-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                          placeholder="Search for movies">
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              <a href="movies/new"><button class="bg-neutral-800 hover:bg-neutral-700 text-white font-bold py-3 px-6 rounded-lg text-nowrap w-auto">
                Film toevoegen
              </button></a>
            </div>
            <div class="flex flex-col px-4">
              <div class="inline-block min-w-full align-middle rounded-lg">
                <div class="overflow-scroll shadow">
                  <table class="min-w-full divide-y divide-neutral-200 table-fixed dark:divide-neutral-600 ">
                    <thead class="bg-neutral-200 dark:bg-neutral-700 rounded-lg">
                      <tr>
                        <th scope="col"
                          class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                          Title
                        </th>
                        <th scope="col"
                          class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                          Released
                        </th>
                        <th scope="col"
                          class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                          Genre
                        </th>
                        <th scope="col"
                          class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                          Director
                        </th>
                        <th scope="col"
                          class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                          Production
                        </th>
                        <th scope="col"
                          class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                          Language
                        </th>
                      </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-neutral-200 dark:bg-neutral-800 dark:divide-neutral-700">
                      <% movies.forEach(movie=> { %>
                        <tr class="hover:bg-neutral-100 dark:hover:bg-neutral-700 cursor-pointer" data-href="/movie/<%= movie.id %>">
                          <td class="p-4 text-base font-semibold text-neutral-900 whitespace-nowrap dark:text-white">
                            <%= movie.title %>
                          </td>
                          <td class="p-4 text-base font-semibold text-neutral-500 whitespace-nowrap dark:text-white">
                            <%= movie.released %>
                          </td>
                          <td
                            class="p-4 flex flex-col gap-2 justify-center items-stretch text-center text-sm font-semibold text-blue-600 whitespace-nowrap">
                            <% movie.genre.forEach(genre=> { %>
                              <div class="inline-block bg-blue-300 border border-blue-400 rounded-lg px-2 py-0.5">
                                <%= genre %>
                              </div>
                              <% }) %>
                          </td>
                          <td class="p-4 text-base font-semibold text-neutral-900 whitespace-nowrap dark:text-white">
                            <%= movie.director %>
                          </td>
                          <td class="p-4 text-base font-semibold text-neutral-900 whitespace-nowrap dark:text-white">
                            <%= movie.production %>
                          </td>
                          <td class="p-4 text-base font-semibold text-neutral-900 whitespace-nowrap dark:text-white">
                            <%= movie.language %>
                          </td>
                        </tr>
                        <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </main>
      </div>
  </div>
  <%- include("partials/footer") %>