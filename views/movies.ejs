<%- include("partials/head") %>
  <div class="flex flex-row">
    <%- include("partials/sidebar") %>
      <div class="flex flex-col max-h-screen w-full overflow-auto">
        <%- include("partials/header") %>
          <main class="m-3">
            <div
              class="p-4 bg-white block sm:flex items-start justify-between dark:bg-neutral-800 dark:border-neutral-700">
              <div class="w-full mb-1">
                <div class="mb-4">
                  <nav class="flex mb-5" aria-label="Breadcrumb">
                    <ol class="inline-flex items-center space-x-1 text-sm font-semibold md:space-x-2">
                      <li class="inline-flex items-center">
                        <a href="#"
                          class="inline-flex items-center text-neutral-400 hover:text-primary-600 dark:text-neutral-300 dark:hover:text-white">
                          <svg class="w-5 h-5 mr-2.5" fill="currentColor" viewBox="0 0 20 20"
                            xmlns="http://www.w3.org/2000/svg">
                            <path
                              d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z">
                            </path>
                          </svg>
                          Home
                        </a>
                      </li>
                      <li>
                        <div class="flex items-center">
                          <svg class="w-6 h-6 text-neutral-700" fill="currentColor" viewBox="0 0 20 20"
                            xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                              d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                              clip-rule="evenodd"></path>
                          </svg>
                          <span class="ml-1 text-neutral-700 md:ml-2 dark:text-neutral-500"
                            aria-current="page">Movies</span>
                        </div>
                      </li>
                    </ol>
                  </nav>
                  <h1 class="text-xl font-semibold text-neutral-900 sm:text-2xl dark:text-white">All movies</h1>
                </div>
                <div
                  class="items-center justify-between block sm:flex md:divide-x md:divide-neutral-100 dark:divide-neutral-700">
                  <div class="flex items-center mb-4 sm:mb-0">
                    <form class="sm:pr-3" action="/movies" method="GET">
                      <label for="search" class="sr-only">Search</label>
                      <div class="relative w-48 mt-1 sm:w-64 xl:w-96">
                        <input type="text" name="q" id="search" value="<%= search %>"
                          class="pl-12 border border-neutral-200 placeholder:font-medium placeholder:text-base text-neutral-900 sm:text-sm rounded-lg focus:ring-neutral-300 focus:border-neutral-500 block w-full p-2.5 dark:bg-neutral-700 dark:border-neutral-600 dark:placeholder-neutral-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                          placeholder="Search for movies...">
                        <svg class="absolute left-3 top-1/2 w-6 h-6 -translate-y-1/2 stroke-neutral-400"
                          viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path
                            d="M15.7955 15.8111L21 21M18 10.5C18 14.6421 14.6421 18 10.5 18C6.35786 18 3 14.6421 3 10.5C3 6.35786 6.35786 3 10.5 3C14.6421 3 18 6.35786 18 10.5Z"
                            stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <div class="flex flex-col px-4">
              <div class="inline-block min-w-full align-middle">
                <table class="min-w-full divide-y divide-neutral-100 table-fixed dark:divide-neutral-600">
                  <thead class="bg-red-50 dark:bg-neutral-700">
                    <tr>
                      <th scope="col"
                        class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400 ">
                        <a class="flex flex-row items-center"
                          href="/movies?q=<%= search %>&sortField=title&sortDirection=<%= sortDirection === 'asc' ? 'desc' : 'asc' %>">Title
                          <% if ((sortDirection !='' || sortField !='' ) && sortField==="title" ) { %>
                            <svg class="w-4 h-4 ml-2  <%= sortDirection === 'asc' ? 'rotate-180' : '' %>"
                              viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M6 15L12 9L18 15" stroke="#000000" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" />
                            </svg>
                            <% } %>
                        </a>
                      </th>
                      <th scope="col"
                        class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                        <a class="flex flex-row items-center"
                          href="/movies?q=<%= search %>&sortField=released&sortDirection=<%= sortDirection === 'asc' ? 'desc' : 'asc' %>">released
                          <% if ((sortDirection !='' || sortField !='' ) && sortField==="released" ) { %>
                            <svg class="w-4 h-4 ml-2  <%= sortDirection === 'asc' ? 'rotate-180' : '' %>"
                              viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M6 15L12 9L18 15" stroke="#000000" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" />
                            </svg>
                            <% } %>
                        </a>
                      </th>
                      <th scope="col"
                        class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                        Genre's
                      </th>
                      <th scope="col"
                        class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                        <a class="flex flex-row items-center"
                          href="/movies?q=<%= search %>&sortField=director&sortDirection=<%= sortDirection === 'asc' ? 'desc' : 'asc' %>">director
                          <% if ((sortDirection !='' || sortField !='' ) && sortField==="director" ) { %>
                            <svg class="w-4 h-4 ml-2  <%= sortDirection === 'asc' ? 'rotate-180' : '' %>"
                              viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                              <path d="M6 15L12 9L18 15" stroke="#000000" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" />
                            </svg>
                            <% } %>
                        </a>
                      </th>
                      <th scope="col"
                        class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                        <a class="flex flex-row items-center"
                          href="/movies?q=<%= search %>&sortField=production&sortDirection=<%= sortDirection === 'asc' ? 'desc' : 'asc' %>">production
                          *
                        </a>
                      </th>
                      <th scope="col"
                        class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                        Language
                      </th>
                      <th scope="col"
                        class="p-4 text-xs font-semibold text-left text-neutral-500 uppercase dark:text-neutral-400">
                        Actions
                      </th>
                    </tr>
                  </thead>
                  <tbody
                    class="bg-white divide-y divide-neutral-100 dark:bg-neutral-800 dark:divide-neutral-700 overflow-scroll">
                    <% movies.forEach(movie=> { %>
                      <tr class="hover:bg-neutral-100 dark:hover:bg-neutral-700 cursor-pointer"
                        data-href="/movies/<%= movie.title %>">
                        <td class="p-4 text-base font-semibold text-neutral-900 whitespace-nowrap dark:text-white">
                          <%= movie.title %>
                        </td>
                        <td class="p-4 text-base font-semibold text-neutral-500 whitespace-nowrap dark:text-white">
                          <%= movie.released %>
                        </td>
                        <td class="p-4 text-base font-semibold text-neutral-900 whitespace-nowrap dark:text-white">
                          <%= movie.genre %>
                        </td>
                        <td class="p-4 text-base font-semibold text-neutral-900 whitespace-nowrap dark:text-white">
                          <%= movie.director %>
                        </td>
                        <td class="p-4 text-base font-semibold text-neutral-900 whitespace-nowrap dark:text-white">
                          <%= movie.production %>
                        </td>
                        <td class="p-4 text-base font-semibold text-neutral-900 whitespace-nowrap dark:text-white">
                          <%= movie.language %>
                        </td>
                        <td class="p-4 text-base font-semibold text-neutral-900 whitespace-nowrap dark:text-white">
                          <a href="/movies/<%= movie.title %>/edit"
                            onclick="event.stopPropagation();"
                            class="text-primary-600 hover:text-primary-900 dark:text-primary-400 dark:hover:text-primary-300">
                            <svg class="w-8 h-8 bg-blue-500 p-1.5 rounded-lg stroke-white" viewBox="0 0 24 24" fill="none"
                              xmlns="http://www.w3.org/2000/svg">
                              <path
                                d="M21.2799 6.40005L11.7399 15.94C10.7899 16.89 7.96987 17.33 7.33987 16.7C6.70987 16.07 7.13987 13.25 8.08987 12.3L17.6399 2.75002C17.8754 2.49308 18.1605 2.28654 18.4781 2.14284C18.7956 1.99914 19.139 1.92124 19.4875 1.9139C19.8359 1.90657 20.1823 1.96991 20.5056 2.10012C20.8289 2.23033 21.1225 2.42473 21.3686 2.67153C21.6147 2.91833 21.8083 3.21243 21.9376 3.53609C22.0669 3.85976 22.1294 4.20626 22.1211 4.55471C22.1128 4.90316 22.0339 5.24635 21.8894 5.5635C21.7448 5.88065 21.5375 6.16524 21.2799 6.40005V6.40005Z"
                                stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
                              <path
                                d="M11 4H6C4.93913 4 3.92178 4.42142 3.17163 5.17157C2.42149 5.92172 2 6.93913 2 8V18C2 19.0609 2.42149 20.0783 3.17163 20.8284C3.92178 21.5786 4.93913 22 6 22H17C19.21 22 20 20.2 20 18V13"
                                stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                          </a>
                        </td>
                      </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </main>
      </div>
  </div>
  <%- include("partials/footer") %>

    <script>
      document.querySelectorAll('tr[data-href]').forEach(elem => {
        elem.addEventListener('click', () => window.location.href = elem.dataset.href);
      });
    </script>